<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.layout="sap.ui.layout"
	xmlns="sap.m">
	<sap.ui.layout.form:Form editable="true">
		<sap.ui.layout.form:layout>
			<sap.ui.layout.form:ResponsiveGridLayout singleContainerFullSize="true" adjustLabelSpan="true" labelSpanS="4" labelSpanM="4" labelSpanL="4"
				backgroundDesign="Transparent"/>
		</sap.ui.layout.form:layout>
		<sap.ui.layout.form:formContainers>
			<sap.ui.layout.form:FormContainer>
				<sap.ui.layout.form:FormElement visible="true">
					<sap.ui.layout.form:fields>
						<MessageStrip id="msRatingMessageStrip" showCloseButton="false" showIcon="true" text="{i18n>messageAppreciateYourFeedback}"/>
					</sap.ui.layout.form:fields>
				</sap.ui.layout.form:FormElement>
				<sap.ui.layout.form:FormElement id="felemRatingFeedback" visible="true">
					<sap.ui.layout.form:fields>
						<TextArea id="tareaRatingFeedback" class="sapUiLargeMarginEnd" placeholder="{i18n>inputPlaceHolderRatingFeedback}"
							value="{Registration>RatingFeedback}" growing="true" height="125px" editable="true"/>
					</sap.ui.layout.form:fields>
				</sap.ui.layout.form:FormElement>
			</sap.ui.layout.form:FormContainer>
		</sap.ui.layout.form:formContainers>
	</sap.ui.layout.form:Form>
</core:FragmentDefinition>