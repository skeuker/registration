<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:sap.ui.layout.form="sap.ui.layout.form">
	<ResponsivePopover id="popSupplierScope" title="Add supplier" class="sapUiPopupWithPadding" placement="Bottom" showHeader="true" width="600px">
		<content>
			<sap.ui.layout.form:Form>
				<sap.ui.layout.form:layout>
					<sap.ui.layout.form:ResponsiveGridLayout/>
				</sap.ui.layout.form:layout>
				<sap.ui.layout.form:formContainers>
					<sap.ui.layout.form:FormContainer>
						<sap.ui.layout.form:formElements>
							<sap.ui.layout.form:FormElement>
								<SegmentedButton selectedKey="Organisation" width="350px">
									<items>
										<SegmentedButtonItem icon="sap-icon://person-placeholder" text="Sole Proprietor" key="Person" press="onPressSupplierPersonAddButton"/>
										<SegmentedButtonItem icon="sap-icon://building" text="Organisation" key="Organisation" press="onPressSupplierOrganisationAddButton"/>
									</items>
								</SegmentedButton>
							</sap.ui.layout.form:FormElement>
						</sap.ui.layout.form:formElements>
					</sap.ui.layout.form:FormContainer>
				</sap.ui.layout.form:formContainers>
			</sap.ui.layout.form:Form>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>